<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Materias</title>
</head>
<body onload="mostrarMaterias()">
    <h1>Registro de Materias</h1>
    <form id="formAgregarMateria">
        <label for="nombreMateria">Nombre de la materia:</label>
        <input type="text" id="nombreMateria" name="nombreMateria" required><br><br>
        <button type="button" onclick="agregarMateria()">Agregar Materia</button>
    </form>
    <br>
    <form id="formBorrarMateria">
        <label for="nombreMateriaBorrar">Nombre de la materia a borrar:</label>
        <input type="text" id="nombreMateriaBorrar" name="nombreMateriaBorrar" required><br><br>
        <button type="button" onclick="borrarMateria()">Borrar Materia</button>
    </form>
    <br>
    <div id="mensaje"></div>
    <div id="listaMaterias"></div>
    
    <script>
        function agregarMateria() {
            var nombre = document.getElementById("nombreMateria").value;
            if (!nombre.trim()) {
                alert("Por favor, ingresa el nombre de la materia.");
                return;
            }
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/materias/agregar", true);
            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    document.getElementById("mensaje").innerHTML = xhr.responseText;
                    mostrarMaterias(); // Actualiza la lista de materias después de agregar una
                    document.getElementById("nombreMateria").value = ""; // Limpia el campo de entrada
                }
            };
            xhr.send("nombre=" + nombre);
        }

        function borrarMateria() {
            var nombre = document.getElementById("nombreMateriaBorrar").value;
            if (!nombre.trim()) {
                alert("Por favor, ingresa el nombre de la materia a borrar.");
                return;
            }
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/materias/borrar", true);
            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    document.getElementById("mensaje").innerHTML = xhr.responseText;
                    mostrarMaterias(); // Actualiza la lista de materias después de borrar una
                    document.getElementById("nombreMateriaBorrar").value = ""; // Limpia el campo de entrada
                }
            };
            xhr.send("nombre=" + nombre);
        }

        function mostrarMaterias() {
            var xhr = new XMLHttpRequest();
            xhr.open("GET", "/mostrar-materias", true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    document.getElementById("listaMaterias").innerHTML = xhr.responseText;
                }
            };
            xhr.send();
        }
    </script>
</body>
</html>
